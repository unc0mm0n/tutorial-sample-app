<li id="<%= %>" class="row">
  <%= link_to gravatar_for(micropost.user, size: 74), micropost.user %>
  <div class="user">
    <%= link_to micropost.user.name, micropost.user %>
  </div>
  <div class="content well well-sm"><%= micropost.content %></div>
  <div class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago by <%= link_to micropost.user.name, user_path(micropost.user_id) %>.
    <% if current_user?(micropost.user) %>
      <%= link_to "delete", micropost, method: :delete,
                                       data: { confirmation: "You sure?" },
                                       title: micropost.content %>
    <% end %>
  </div>
</li>
